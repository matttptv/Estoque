@model Estoque.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patrimonio"></label>
                <input asp-for="Patrimonio" class="form-control" />
                <span asp-validation-for="Patrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinQuantidade"></label>
                <input asp-for="MinQuantidade" class="form-control" />
                <span asp-validation-for="MinQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxQuantidade"></label>
                <input asp-for="MaxQuantidade" class="form-control" />
                <span asp-validation-for="MaxQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco"></label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>
